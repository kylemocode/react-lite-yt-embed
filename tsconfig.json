{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react",
    "typeRoots": [
      "dist/index.d.ts",
      "node_modules/@types"
    ]
  },
  "include": [
    "./src/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}